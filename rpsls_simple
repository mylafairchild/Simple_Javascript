//Using codeacademy's rock paper scissors code and formula, I created rock paper scissors lizard spock
//I know that this is a lot of repeating, and messy. It was challenging doing it this way

var userChoice = prompt("Do you choose rock, paper or scissors?");
var computerChoice = Math.random();
if (computerChoice < 0.23) {
	computerChoice = "rock";
} else if(computerChoice < 0.42) {
	computerChoice = "paper";
} else if(computerChoice < 0.62) {
	computerChoice = "lizard";
} else if(computerChoice < 0.82) {
	computerChoice = "spock";
} else {
	computerChoice = "scissors";
} console.log("Computer: " + computerChoice);
var compare = function(choice1, choice2) {
    if (choice1 === choice2) {
return "The result is a tie!";
    }
else if(choice1 === "rock") {
    if(choice2 === "scissors") {
        return "rock wins";
    }
    else {
        return "spock wins";
    }
}
    else if(choice1 === "paper") {
        if(choice2 === "spock") {
            return "paper wins"
        }
        else {
            return "lizard wins"
        }
    }
    else if(choice1 === "paper") {
        if(choice2 === "rock") {
            return "paper wins"
        }
        else {
            return "scissors wins"
        }
    }
    else if(choice1 === "scissors") {
        if(choice2 === "paper") {
            return "scissors wins"
        }
        else {
            return "rock wins"
        }
    }
    else if(choice1 === "lizard") {
        if(choice2 === "rock") {
            return "rock crushes lizard"
        } 
        else {
            return "spock wins"
        }
    }

        
}
compare(userChoice, computerChoice);
